<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.printer.example.activity.KotlinMainActivity" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.KotlinMainActivity">

        <TextView
            android:id="@+id/tvVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Printer Example Ver: v0.0.1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/command_type" />

                <com.printer.example.view.FlowRadioGroup
                    android:id="@+id/rgCmdType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_cmd_esc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cmdtype_esc" />

                    <RadioButton
                        android:id="@+id/rb_cmd_tsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cmdtype_tsc" />

                    <RadioButton
                        android:id="@+id/rb_cmd_cpcl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cmdtype_cpcl" />

                    <RadioButton
                        android:id="@+id/rb_cmd_zpl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cmdtype_zpl"
                        android:visibility="visible" />

                    <RadioButton
                        android:id="@+id/rb_cmd_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/cmdtype_pin" />
                </com.printer.example.view.FlowRadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/connect_type" />

                <com.printer.example.view.FlowRadioGroup
                    android:id="@+id/rgConnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbConnectBluetooth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bluetooth" />

                </com.printer.example.view.FlowRadioGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_connected_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:onClick="@{()->activity.showConnectedListDialog()}"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/show_conncected_devices" />

                <TextView
                    android:id="@+id/tvDeviceSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray2"
                    android:onClick="@{()->activity.showConnectDialog()}"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="-1"
                    android:text="@string/please_connect"
                    android:textSize="18sp" />

                <ProgressBar
                    android:id="@+id/pbConnect"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_disConnect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:onClick="@{()->activity.doConnect()}"
                        android:enabled="false"
                        android:text="@string/disconnect" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_connect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:onClick="@{()->activity.doConnect()}"
                        android:layout_weight="1"
                        android:text="@string/connect" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/gray2" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTest"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:text="Test"
                        android:enabled="false"
                        android:onClick="@{()->activity.testTsc()}"
                        android:visibility="gone"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCmdTest"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:text="Cmd Test"
                        android:onClick="@{()->activity.toBCmdTestActivity()}"
                        android:enabled="false"
                        android:visibility="visible"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLabelSetting"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:text="@string/label_setting"
                        android:enabled="false"
                        android:onClick="@{()->activity.toLabelSettingActivity()}"
                        android:visibility="gone"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelfTestPrint"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:onClick="@{() -> activity.selfTestPrint()}"
                        android:text="@string/self_test_print"
                        android:enabled="false"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTxtPrint"
                        style="@style/main_activity_button"
                        android:onClick="@{() -> activity.txtPrint()}"
                        android:layout_weight="1"
                        android:text="@string/text_print"
                        android:enabled="false"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnImgPrint"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:text="@string/image_print"
                        android:onClick="@{() -> activity.imagePrint()}"
                        android:enabled="false"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBarcodePrint"
                        style="@style/main_activity_button"
                        android:onClick="@{() -> activity.toBarcodeActivity()}"
                        android:layout_weight="1"
                        android:text="@string/barcode_print"
                        android:enabled="false"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTemplatePrint"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:onClick="@{() -> activity.toTemplateActivity()}"
                        android:text="@string/template_print"
                        android:enabled="false"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBeep"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:onClick="@{() -> activity.beepTest()}"
                        android:text="@string/beeper_test"
                        android:enabled="false"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAllCut"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:onClick="@{() -> activity.allCutTest()}"
                        android:text="@string/cutter_test"
                        android:enabled="false"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCashBox"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:onClick="@{() -> activity.cashBoxTest()}"
                        android:text="Cashbox Test"
                        android:enabled="false"/>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWifiSetting"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:text="WiFi Settings"
                        android:onClick="@{() -> activity.toWifiSettingActivity()}"
                        android:enabled="false"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWifiIpdhcp"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:onClick="@{() -> activity.toWifiIpDhcpSettingActivity()}"
                        android:text="WiFi IP/DHCP"
                        android:enabled="false"/>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrintStatus"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:onClick="@{() -> activity.getPrintStatus()}"
                        android:text="@string/Print_status"
                        android:enabled="false"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrintStatus2"
                        style="@style/main_activity_button"
                        android:layout_weight="1"
                        android:text="@string/Print_status_test"
                        android:visibility="gone"
                        android:enabled="false"/>
                </TableRow>
            </LinearLayout>
        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>